    <select name="regione" id="regione">
        <option value="" disabled selected>Scegli regione</option>
        <% for(let i = 0; i < regionDen.length; i++) {  %>
            <option value=<%= regionCode[i] %>><%= regionDen[i]%></option>
        <% } %>
