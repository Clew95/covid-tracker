    <select name="provincia" id="provincia"  disabled>
        <option value="">Seleziona prima la regione</option>
    </select>
    
    <button class="btn btn--alternative-2 u-margin-left-m" id="searchBtn" type="submit">Cerca</button>
    <script>
        const formData = <%- JSON.stringify(data) %>;
    </script>
</form>
